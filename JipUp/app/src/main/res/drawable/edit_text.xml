<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_enabled="true">
        <shape>
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="2dip" android:color="#4a9def"/>
            <corners android:radius="5dip"/>
            <padding
                android:left="7dip"
                android:right="7dip"
                android:top="7dip"
                android:bottom="7dip" />
        </shape>
    </item>

    <item android:state_focused="true" android:state_enabled="true">
        <shape>
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="2dip" android:color="#4a9def"/>
            <corners android:radius="5dip"/>
            <padding
                android:left="7dip"
                android:right="7dip"
                android:top="7dip"
                android:bottom="7dip" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="1dp" android:color="#aeadad"/>
            <corners android:radius="5dip"/>
            <padding
                android:left="7dip"
                android:right="7dip"
                android:top="7dip"
                android:bottom="7dip" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="0.5dip" android:color="#4a9def"/>
            <corners android:radius="5dip"/>
            <padding
                android:left="7dip"
                android:right="7dip"
                android:top="7dip"
                android:bottom="7dip" />
        </shape>
    </item>

</selector>