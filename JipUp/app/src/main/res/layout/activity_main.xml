<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:background="@drawable/top_bar"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Hello, 집업!"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="25dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp">
        <Button
            android:id="@+id/main_btnStart"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:padding="20dp"
            android:text="주행하기"
            android:textSize="20dp"
            android:drawableTop="@drawable/car"
            android:background="@drawable/main_button"/>

        <Button
            android:id="@+id/main_btnDrivingList"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:padding="20dp"
            android:text="주행내역"
            android:textSize="20dp"
            android:drawableTop="@drawable/list"
            android:background="@drawable/main_button"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp">
            <com.example.mcjun.mkjar.QuadcoreView
                android:id="@+id/main_imgPhoto"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|left">
            <TextView
                android:id="@+id/main_tvGetName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="입력된 이름 출력"
                android:textSize="20dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/main_tvGetEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="입력된 이메일 출력"
                android:textSize="15dp"
                android:textColor="#000000" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp">
        <Button
            android:id="@+id/main_btnLogout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginRight="8dp"
            android:text="로그아웃"
            android:background="@drawable/gray_button"/>

        <Button
            android:id="@+id/main_btnEdit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="내 정보 수정"
            android:textColor="@android:color/white"
            android:background="@drawable/blue_button"/>
    </LinearLayout>


</LinearLayout>