<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="40dp"
    android:layout_marginRight="35dp"
    android:layout_marginLeft="35dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/imgLogo"
        android:padding="5dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/thisislogo2"/>

    <EditText
        android:id="@+id/login_edtEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:inputType="textEmailAddress"
        android:hint="이메일 입력"
        android:background="@drawable/edit_text"/>

    <EditText
        android:id="@+id/login_edtPw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:inputType="textPassword"
        android:hint="비밀번호 입력"
        android:background="@drawable/edit_text"/>

    <Button
        android:id="@+id/login_btnLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:text="로그인"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:background="@drawable/blue_button"/>

    <!-- 자동로그인 체크박스 추가-->
    <CheckBox
        android:id="@+id/login_chkAutoLogin"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="자동로그인"
        android:textSize="15dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d1d1d1"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:paddingLeft="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정이 없으신가요?  "
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/login_tvLinktoJoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="#4a9def"
            android:textSize="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호를 잊어버리셨나요?  "
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/login_tvLinktoFindPw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4a9def"
            android:text="비밀번호 찾기"
            android:textSize="15dp"/>
    </LinearLayout>

</LinearLayout>